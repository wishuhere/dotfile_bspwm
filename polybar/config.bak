[bar/top]
monitor = ${env:MONITOR:}
width = 100%
height = 22

wm-restack = bspwm

background = #00000000
foreground = #ccffffff

line-color = ${bar/bottom.background}
line-size = 16

tray-position = right
#tray-position = ${env:TRAY_POS}
tray-maxsize = 14

spacing = 2
padding-right = 5
module-margin = 4




font-0 = NotoSans-Regular:size=10;2
font-1 = MaterialIcons:size=10;2
font-2 = Termsynu:size=8:antialias=false;-2
font-3 = Font Awesome 5 Free Regular:size=10;2
font-4 = Font Awesome 5 Free Solid:size=10;2
font-5 = Font Awesome 5 Brands Regular:size=10;2
font-6 = Noto Color Emoji:style=Regular:size=1;2
font-7 = NotoSans-Regular:size=8;0
font-8 = unifont:size=6;-3
